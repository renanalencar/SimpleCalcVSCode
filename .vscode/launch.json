    "version": "0.2.0",
    "configurations": [
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Debug Current Grammar",
            "input": "input.txt",
            "startRule": "expr",
            "printParseTree":true,
            "visualParseTree": true
        },
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-Tool<javanapratica>",
            "request": "launch",
            "mainClass": "org.antlr.v4.Tool",
            "projectName": "javanapratica"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-TestRig<javanapratica>",
            "request": "launch",
            "mainClass": "org.antlr.v4.gui.TestRig",
            "projectName": "javanapratica"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-FlexibleHashMap<javanapratica>",
            "request": "launch",
            "mainClass": "org.antlr.v4.runtime.misc.FlexibleHashMap",
            "projectName": "javanapratica"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-LogManager<javanapratica>",
            "request": "launch",
            "mainClass": "org.antlr.v4.runtime.misc.LogManager",
            "projectName": "javanapratica"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-TestRig<javanapratica>(1)",
            "request": "launch",
            "mainClass": "org.antlr.v4.runtime.misc.TestRig",
            "projectName": "javanapratica"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-STViz<javanapratica>",
            "request": "launch",
            "mainClass": "org.stringtemplate.v4.gui.STViz",
            "projectName": "javanapratica"
        }
    ]
}